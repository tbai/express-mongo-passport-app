<script type="text/javascript" src="/javascripts/require.js"></script>
<script type="text/javascript">
	requirejs.config({
        baseUrl:"/javascripts",

        paths: { 
            jquery:'http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min'
            ,ejs:'/javascripts/lib/ejs'
            ,bootstrap:'lib/bootstrap.min' 
        },

        shim: {
            jquery : {
                exports:"$"
            },
            bootstrap : {
                // bootstrap button conflicts with jqueryUi, but it works if we load jqueryUi first
                deps:["jquery", "jqueryUi"] 
            },
            ejs: {
                deps:['jquery'],
                exports:'EJS'
            }
        }
    });
</script>